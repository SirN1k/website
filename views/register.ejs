<%- include('partials/header', { title: 'register' }) %>
        <div class="login-box">
            <div class="login-header">
                <h1>Register</h1>
            </div>

            <form action="/register" method="post">
                <div class="input-box">
                    <input type="text" class="input-field <%= locals.message ? 'message' : '' %>" name="email" placeholder="<%= locals.message ? message : 'Email' %>" autocomplete="off" required>
                </div>
                <div class="input-box">
                    <input type="password" class="input-field" name="password" placeholder="Password" autocomplete="off" required>
                </div>
                <div class="input-box">
                    <input type="first_name" class="input-field" name="first_name" placeholder="First name" autocomplete="off">
                </div>
                <div class="input-box">
                    <input type="last_name" class="input-field" name="last_name" placeholder="Last name" autocomplete="off">
                </div>

                <div class="input-submit">
                    <button class="submit-btn" id="submit">Sign Up</button>
                </div>

                <div class="sign-up-link">
                    <p>Already have an account? <a href="/login">Sign In</a></p>
                </div>
            </form>
                  
        </div>
<%- include('partials/footer') %>